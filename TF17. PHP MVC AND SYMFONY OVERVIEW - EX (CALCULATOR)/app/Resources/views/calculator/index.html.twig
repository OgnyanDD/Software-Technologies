{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-inline" action="{{ path('index') }}" method="POST">
                <fieldset>
                    <div class="form-group">
                        <div class="col-sm-1 ">
                            <input type="text" class="form-control" id="leftOperand" placeholder="Left Operand"
                                   name="calculator[leftOperand]" value="{{ calculator.leftOperand ?? '' }}" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 ">
                            <select class="form-control" name="calculator[operator]" onchange="Check(this)">
                                <option selected disabled>Select option...</option>
                                <option value="+" {{ calculator is defined and calculator.operator == '+' ? 'selected' : '' }}>+</option>
                                <option value="-" {{ calculator is defined and calculator.operator == '-' ? 'selected' : '' }}>-</option>
                                <option value="*" {{ calculator is defined and calculator.operator == '*' ? 'selected' : '' }}>*</option>
                                <option value="/" {{ calculator is defined and calculator.operator == '/' ? 'selected' : '' }}>/</option>
                                <option value="^" {{ calculator is defined and calculator.operator == '^' ? 'selected' : '' }}>^</option>
                                <option value="√" {{ calculator is defined and calculator.operator == '√' ? 'selected' : '' }}>√</option>
                                <option value="mod" {{ calculator is defined and calculator.operator == 'mod' ? 'selected' : '' }}>mod</option>
                                <option value="sin" {{ calculator is defined and calculator.operator == 'sin' ? 'selected' : '' }}>sin</option>
                                <option value="cos" {{ calculator is defined and calculator.operator == 'cos' ? 'selected' : '' }}>cos</option>
                                <option value="tan" {{ calculator is defined and calculator.operator == 'tan' ? 'selected' : '' }}>tan</option>
                                <option value="!" {{ calculator is defined and calculator.operator == '!' ? 'selected' : '' }}>!</option>
                                <option value="ln" {{ calculator is defined and calculator.operator == 'ln' ? 'selected' : '' }}>ln</option>
                            </select>
                        </div>
                    </div>

                    <script type="text/javascript">
                        function Check(that) {
                            if (that.value == "√" || that.value == "sin" || that.value == "cos" || that.value == "tan" || that.value == "!" || that.value == "ln") {
                                document.getElementById("rightOperand").setAttribute('readonly', 'readonly');
                            }
                        }
                    </script>

                    <div class="form-group">
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="rightOperand" placeholder="Right Operand"
                                   name="calculator[rightOperand]" value="{{ calculator.rightOperand ?? '' }}" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="result" placeholder="Result"
                                   name="result" value="{{ result ?? '' }}" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button type="submit" class="btn btn-success">Calculate</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-1">
                            <button type="reset" class="btn btn-danger" onclick="window.location='http://127.0.0.1:8000'">Reset</button>
                        </div>
                    </div>

                    <div class="jumbotron">
                        <h4><strong><i class="fa fa fa-search"></i> Calculator functions:</strong></h4>
                        <div class="info">
                            <ul>
                                <li>'<strong>+</strong>' <i>plus</i> - sum Left and Right Operand;</li>
                                <li>'<strong>-</strong>' <i>minus</i> - subtracts Left Operand from Right Operand;</li>
                                <li>'<strong>*</strong>' <i>multiplication</i> - multiplies Left and Right Operand;</li>
                                <li>'<strong>/</strong>' <i>division</i> - divide Left and Right Operand;</li>
                                <li>'<strong>^</strong>' <i>power</i> - power Left Operand with Right Operand;</li>
                                <li>'<strong>√</strong>' <i>square root</i> - square root of Left Operand (Right Operand
                                    - readonly);
                                </li>
                                <li>'<strong>mod</strong>' <i>modulo</i> - modulo Left Operand with Right Operand;</li>
                                <li>'<strong>sin</strong>' <i>sin function</i> - sin function of Left Operand in DEG
                                    (Right Operand - readonly);
                                </li>
                                <li>'<strong>cos</strong>' <i>cos function</i> - cos function of Left Operand in DEG
                                    (Right Operand - readonly);
                                </li>
                                <li>'<strong>tan</strong>' <i>tan function</i> - tan function of Left Operand in DEG
                                    (Right Operand - readonly);
                                </li>
                                <li>'<strong>!</strong>' <i>factorial</i> - factorial of Left Operand (Right Operand -
                                    readonly);
                                </li>
                                <li>'<strong>ln</strong>' <i>natural logarithm</i> - natural logarithm of Left Operand
                                    (Right Operand - readonly);
                                </li>
                            </ul>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}
