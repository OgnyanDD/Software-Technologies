{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('article_delete', {'id': article.id}) }}" method="POST">
                <fieldset>
                    <legend><i class="fa fa fa-trash"></i> Delete the following article:</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_link">Link:</label>
                        <div class="col-sm-4 ">
                            <input type="url" class="form-control" id="article_link"
                                   placeholder="Please enter image web link..."
                                   name="article[link]" value="{{ article.link }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Article Title:</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_title" placeholder="Article Title"
                                   name="article[title]" value="{{ article.title }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_publicationType">Publication Type:</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_publicationType"
                                   placeholder="Publication Type"
                                   name="article[publicationType]" value="{{ article.publicationType }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_content">Article Content:</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="article_content" placeholder="Article Content"
                                  name="article[content]" disabled>{{ article.content }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('blog_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

